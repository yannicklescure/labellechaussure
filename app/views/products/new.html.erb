<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>
<hr>
<div class="container">
  <p class="text-center"><%= current_user.email %></p>
  <div class="row justify-content-center">
    <div class="col-10 col-md-8">
      <%= simple_form_for(@product) do |f| %>
        <%= f.input :title %>
        <%= f.input :description, as: :text %>
        <%= f.input :price %>
        <%= f.input :model %>
        <%= f.association :color %>
        <%= f.input :size, collection: (6..15) %>
        <%= f.input :brand %>
        <%= f.input :year, collection: (1955..2019) %>
        <%= f.submit class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
