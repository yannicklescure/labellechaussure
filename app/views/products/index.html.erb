<%= render "shared/banner" %>

<div class="row justify-content-around m-0 p-3">
  <% @products.each do |product| %>
      <div class="col-12 col-md-4 col-lg-3 mb-3">
        <div class="card">
          <img src="<%= product.fake_photo %>" class="card-img-top" alt="<%= product.title %>" style="height: 264px; object-fit: cover">
          <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-end">
              <div class="card-text">
                <p class="h6 m-0"><%= link_to product.title, product_path(product) %></p>
                <p class="m-0">$ <%= product.price %></p>
              </div>
              <div class="card-text"><i class="far fa-heart"></i></div>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>

