<div class="row justify-content-center m-0 mt-5">
  <div class="col-12 px-3">
    <div class="card bg-white">
      <div class="row m-0 p-3 border-bottom align-items-center justify-content-between">
        <h5 class="card-title m-0"><%= @purchase.product.title %></h5>
        <% if @purchase.confirm %>
          <span class="text-success">Confirmed</span>
        <% else %>
          <span class="text-warning">Waiting for approval</span>
        <% end %>
      </div>
      <div class="row m-0">
        <div class="col-6 p-3">
          <img src="<%= @purchase.product.photo %>" class="img" alt="<%= @purchase.product.title %>">
        </div>
        <div class="col-6 py-3 px-5">
          <table class="mt-3">
              <tr>
                <td width="64"><span class="text-muted">Seller</span></td>
                <td><%= @purchase.product.user.first_name.capitalize %></td>
              </tr>
            <tr>
              <td><span class="text-muted">Model</span></td>
              <td><%= @purchase.product.model %></td>
            </tr>
            <tr>
              <td><span class="text-muted">Brand</span></td>
              <td><%= @purchase.product.brand %></td>
            </tr>
            <tr>
              <td><span class="text-muted">Year</span></td>
              <td><%= @purchase.product.year %></td>
            </tr>
            <tr>
              <td><span class="text-muted">Color</span></td>
              <td><%= @purchase.product.color.name %></td>
            </tr>
            <tr>
              <td><span class="text-muted">Size</span></td>
              <td><%= @purchase.product.size %></td>
            </tr>
            <tr>
              <td><span class="text-muted">Price</span></td>
              <td>$&nbsp;<%= @purchase.product.price %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row m-0 p-3">
        <div class="col">
          <p><span class="text-muted">Description:</span><br><%= @purchase.product.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center mt-5">
  <div class="col-12">
    <h5 class="p-3">Other sneakers you may like</h5>
    <div class="row m-0">
      <% @similarproduct.each do |product| %>
          <%# raise %>
          <% next if product.id == params[:id].to_i %>

          <div class="col-12 col-md-4 col-lg-3 p-3">
            <div class="card card-transition">
              <img src="<%= product.fake_photo %>" class="card-img-top" alt="<%= product.title %>" style="height: 264px; object-fit: cover">
              <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-end">
                  <div class="card-text">
                    <p class="h6 m-0"><%= link_to truncate(product.title, 25), product_path(product), class: 'stretched-link text-body text-decoration-none' %></p>
                    <p class="m-0 text-secondary">$ <%= product.price %></p>
                  </div>
                  <div class="card-text">
                    <i class="far fa-heart text-secondary"></i>
                    <i class="fas fa-heart text-danger"></i>
                  </div>
                </div>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
