<div class="container">
  <!-- <h1>Purchases#index</h1> -->
  <!-- <p>Find me in app/views/purchases/index.html.erb</p> -->
  <hr>
  <div class="row justify-content-center">
  <% @purchases.each do |purchase| %>
    <%# product = Product.find(purchase.product_id) %>
    <% product = purchase.product %>
    <div class="card-product mb-3 col-10 col-lg-8">
      <img src="<%=product.fake_photo%>" alt="fake photo">
      <%#= cl_image_tag "product.fake_photo", alt: product.title %>
      <div class="card-product-infos p-3">
        <div>
          <h2><%= product.title %></h2>
          <p><%= product.description %></p>
          <p><strong><%= product.price %></strong> </p>
          <p><%= product.user.first_name %></p>
        </div>
        <div>
          <%= link_to "cancel", "#"  %> <%= link_to "show", purchase_path(purchase)  %>
        </div>
    <p><%= purchase.done = "purchased" %></p>
      </div>
    </div>
  <% end %>

  </div>
</div>
