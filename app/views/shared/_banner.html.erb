<div class="banner" style="margin-top: -10px;background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1527090526205-beaac8dc3c62?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80);">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 text-center m-5">
      <h1>La belle chaussure brings <strong>your sneakers collection</strong> to <strong>the next level</strong>!</h1>
    </div>
    <div class="col-4 text-center">
      <%= form_tag(products_path, method: :get, remote: true, class: 'form-inline') do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control flex-grow-1 text-center",
          placeholder: "What are you looking for?"
        %>
        <%= button_tag type: 'submit', class: "btn btn-secondary" do %>
        <i class="fa fa-search" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
